{% extends 'base-admin.html.twig' %}

{% block page_title %}
    Tableaux <a href="{{ path('admin_painting_add') }}" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Ajouter</a>
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Dimensions</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for painting in paintings %}
                    <tr>
                        <td>{{ painting.date|date('d/m/Y') }}</td>
                        <td>
                            <img src="{{ painting.image }}" alt="{{ painting.name }}"/>
                        </td>
                        <td>{{ painting.name }}</td>
                        <td>{{ painting.width }}x{{ painting.height }}</td>
                        <td>
                            <a href="{{ path('admin_painting_update', {'uuid': painting.uuid}) }}" class="btn btn-primary btn-sm" title=""><i class="fas fa-pen"></i> Modifier</a>
                            <a href="{{ path('admin_painting_delete', {'uuid': painting.uuid}) }}" class="btn btn-primary btn-sm" title=""><i class="fas fa-times"></i> Supprimer</a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
